<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/singlepos_mainmapbk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_address_tv"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:longClickable="true"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="位置"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/new_selfpopupclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/singlepos_mainmapclose"
            android:scaleType="fitXY" >
        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_lo_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.7"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="经度"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_la_tv"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="纬度"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_jizhan"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.7"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="基站"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_shanqu_tv"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="扇区"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/nid_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="10dp"
        android:text="nid"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageViewmemlistphoto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/singlepos_mainmappostime" >
        </ImageView>

        <TextView
            android:id="@+id/new_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="123444444"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="12dp" >
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="按住位置描述信息区域3秒可自动放大查看"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
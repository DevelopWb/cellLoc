<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loc_tag_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/cell_record_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/people_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="成员名称："
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/people_mobile_tv"
        app:layout_constraintLeft_toRightOf="@+id/loc_tag_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/people_mobile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号："
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/lng_tv"
        app:layout_constraintLeft_toLeftOf="@+id/people_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/people_name_tv" />


    <TextView
        android:id="@+id/lng_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经度："
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/loc_time_tv"
        app:layout_constraintLeft_toLeftOf="@+id/people_mobile_tv"
        app:layout_constraintTop_toBottomOf="@+id/people_mobile_tv" />

    <TextView
        android:id="@+id/lat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="纬度："
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/lng_tv"
        app:layout_constraintTop_toTopOf="@+id/lng_tv" />

    <TextView
        android:id="@+id/loc_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定位时间："
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/lng_tv"
        app:layout_constraintTop_toBottomOf="@+id/lng_tv" />

    <ImageView
        android:id="@+id/arrow_right_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
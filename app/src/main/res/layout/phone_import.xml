<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutHistoryDataMapTitleBar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/p28" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dip"
                android:layout_height="20dip"

                android:background="@drawable/main_logo"
                android:scaleType="fitXY" >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="话单导入"
                android:textColor="#ffffff"
                android:textSize="15sp"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="话单人姓名："
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phone_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/singlepos_textbox"
            android:paddingLeft="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="话单人电话："
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/singlepos_textbox"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="6dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="话单人备注："
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/phone_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:layout_marginRight="15dp"
            android:background="@drawable/singlepos_textbox"
            android:padding="6dp"
            android:lines="3"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/Num_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/export_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbutton_bg"
                android:onClick="ExportPhoneModel"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="导出话单模板"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/import_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbutton_bg"
                android:onClick="ImportPhoneNum"
                android:paddingLeft="15dp"
                android:layout_marginLeft="40dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="导入话单文件"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainactivity_ll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/cmcc_ll"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/cmcc_logo_iv"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/cmcc_normal_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="移动基站"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/unicom_ll"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/unicom_logo_iv"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"

                android:src="@mipmap/unicom_normal_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="联通基站"
               />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/telecom_ll"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/telecom_logo_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@mipmap/telecom_normal_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="电信基站"
               />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shanqu_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="LAC(扇区号) ："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/LAC_et"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/singlepos_textbox"
                android:maxLength="9"
                android:numeric="integer"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jizhan_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="CID( 基站号 )："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/CELL_et"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/singlepos_textbox"
                android:maxLength="9"
                android:numeric="integer"
                android:paddingLeft="6dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/telecomNID_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/qita_tv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="NID(网络识别码)："
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/NID_et"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/singlepos_textbox"
                android:maxLength="5"
                android:numeric="integer"
                android:paddingLeft="6dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/cell_search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/textbutton_bg"
            android:gravity="center"
            android:text="定      位"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </RelativeLayout>

</LinearLayout>
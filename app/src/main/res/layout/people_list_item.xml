<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/head_pic_iv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/headhint"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_head_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/people_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/people_mobile_tv"
        app:layout_constraintLeft_toRightOf="@+id/head_pic_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/people_mobile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mobile"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/people_loc_type_tv"
        app:layout_constraintLeft_toLeftOf="@+id/people_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/people_name_tv" />

    <TextView
        android:id="@+id/people_loc_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/devtype_mobile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/people_mobile_tv"
        app:layout_constraintTop_toBottomOf="@+id/people_mobile_tv" />


</android.support.constraint.ConstraintLayout>
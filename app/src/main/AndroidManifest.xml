        <activity android:name=".newgpsone.MainActivity" />
        <activity android:name=".newgpsone.functions.celllocate.CellLocateActivity"
             />

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="e6835123bad4409c696e7a59c7cb510e" />

        <activity android:name=".newgpsone.older.CellPositionActivity" />
        <activity
            android:name=".newgpsone.functions.BaseFunctionActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".newgpsone.app_entrance.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

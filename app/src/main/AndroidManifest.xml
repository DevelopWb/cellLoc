            android:name=".newgpsone.older.FileManagerExportActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".newgpsone.older.FileManagerActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".newgpsone.older.PhoneBillImportActivity"
            android:configChanges="orientation|keyboardHidden"
            />
        <activity
            android:name=".newgpsone.older.SearchMapActivity"
            android:configChanges="orientation|keyboardHidden"
             />
        <activity
            android:name=".newgpsone.older.NewHistoryDataActivity"
            android:configChanges="orientation|keyboardHidden"
             />
        <activity
            android:name=".newgpsone.older.NewHistoryMapActivity"
            android:configChanges="orientation|keyboardHidden"
            /> <!-- 定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService" />
